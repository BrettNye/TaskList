@page
@model Nye_TaskList.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row d-flex vh-100 mt-5">
    <div class="container col-md-2">
        <section>
            <h2>Sign in</h2>
            <hr />
            <form id="Login" class="form"
                  method="post" asp-page-handler="Login">
                <div class="text-danger"></div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" name="Username" class="form-control" />
                    <div for="username" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" name="Password"
                           class="form-control " />
                    <div for="password" class="text-danger"></div>
                </div>
                <div id="message"></div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light">Sign in</button>
                </div>
            </form>
            <a asp-page="/Register">Don't have an account? Register Here</a>
        </section>
    </div>
</div>
<script>
    function Login() {
        $.ajax({
            type: "POST",
            url: '/Login?handler=Login',
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden"[name="__RequestVerficationToken"]').val());
            }
        });
    }
</script>

