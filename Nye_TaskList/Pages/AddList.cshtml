@page
@model Nye_TaskList.Pages.AddListModel
@{
    ViewData["Title"] = "AddList";
}

<div class="row d-flex vh-100 mt-5">
    <div class="container col-md-2">
        <section>
            <h2>Sign in</h2>
            <hr />
            <form id="ListAdd" class="form"
                  method="post" asp-page-handler="Add">
                <div class="form-group">
                    <label for="ListName">List Name</label>
                    <input id="ListName" name="listname" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light">Sign in</button>
                </div>
            </form>
        </section>
    </div>
</div>
<script>
    function AddList() {
        $.ajax({
            type: "POST",
            url: '/AddList?handler=Add'
        });
    }
</script>



