@page
@model Nye_TaskList.Pages.LoginFailedModel
@{
    ViewData["Title"] = "LoginFailed";
}

@if (clsUserStatus.loggedIn == false)
{
    <div class="row d-flex flex-column vh-100 mt-4 justify-content-center text-center">
        <div class="container col-3">
            <section>
                <div class="pb-5">Your Username or Password was Incorrect!!</div>
                <a asp-page="/Login" class="btn btn-primary">Try Again</a>
            </section>
        </div>
    </div>
}
else
{
    <div class="row d-flex flex-column vh-100 mt-4 justify-content-center text-center">
        <div class="container col-3">
            <section>
                <div class="pb-5">You already have a list with that name!</div>
                <a asp-page="/AddList" class="btn btn-primary">Try Again</a>
            </section>
        </div>
    </div>
}