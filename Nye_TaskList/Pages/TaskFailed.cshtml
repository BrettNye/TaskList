@page
@model Nye_TaskList.Pages.TaskFailedModel
@{
    ViewData["Title"] = "AddTaskFailed";
}

@if (clsStaticInfo.AddFail == false)
{
    <div class="row d-flex flex-column vh-100 mt-4 justify-content-center text-center">
        <div class="container col-3">
            <section>
                <div class="pb-5">Task name is already in use!</div>
                <a asp-page="/EditTask" class="btn btn-primary">Try Again</a>
            </section>
        </div>
    </div>
}
else
{
    <div class="row d-flex flex-column vh-100 mt-4 justify-content-center text-center">
        <div class="container col-3">
            <section>
                <div class="pb-5">Task name is already in use!</div>
                <a asp-page="/AddTask" class="btn btn-primary">Try Again</a>
            </section>
        </div>
    </div>
}