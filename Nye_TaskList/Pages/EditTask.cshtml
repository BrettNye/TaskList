@page
@model Nye_TaskList.Pages.EditTaskModel
@{
    ViewData["Title"] = "EditTask";
}
<div class="row d-flex vh-100 mt-5">
    <div class="container col-md-6 d-inline-flex">
        <section class="col-md-6">
            <h2>Edit Task</h2>
            <hr />
            <form id="TaskEdit" class="form"
                  method="post" asp-page-handler="Edit">
                <div class="form-group">
                    <label for="taskName">Task Name</label>
                    <input id="taskName" name="taskname" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="taskDescription">Description</label>
                    <input id="taskDescription" name="taskDesc" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="taskDue">Due Date</label>
                    <input id="taskDue" type="datetime-local" name="taskDue" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="hidden" id="taskID" name="taskID" value="@clsStaticInfo.TaskID"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light">Edit</button>
                </div>
            </form>
        </section>
        <section class="col-md-6">
            <form>
            <table>
                <thead>
                    <tr>
                        <th><h2>Current Task Information</h2></th>
                    </tr>
                    <tr>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <label>Task Name:</label>
                            <label>@clsStaticInfo.TaskName</label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Description:</label>
                            <label>@clsStaticInfo.TaskDesc</label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Due Date:</label>
                            <label>@clsStaticInfo.TaskDue</label>
                        </td>
                    </tr>
                </tbody>
            </table>
                </form>
        </section>
    </div>
</div>