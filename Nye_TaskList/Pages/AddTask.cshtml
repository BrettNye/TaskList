@page
@model Nye_TaskList.Pages.AddTaskModel
@{
    ViewData["Title"] = "AddTask";
}

<div class="row d-flex vh-100 mt-5">
    <div class="container col-md-2">
        <section>
            <h2>Sign in</h2>
            <hr />
            <form id="ListAdd" class="form"
                  method="post" asp-page-handler="Add">
                <div class="form-group">
                    <label for="taskName">Task Name</label>
                    <input id="taskName" name="taskname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="taskDescription">Description</label>
                    <input id="taskDescription" name="taskDesc" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="taskDue">Task Due Date</label>
                    <input id="taskDue" type="datetime-local" name="taskDue" class="form-control" />
                    <p>If you do not input a value it will be set to current time and date</p>
                </div>
                <div class="form-group">
                    <input type="hidden" id="taskStatus" name="taskStatus" value="P" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light">Add Item</button>
                </div>
            </form>
        </section>
    </div>
</div>